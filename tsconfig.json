{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "build",
		"sourceMap": true,
		"jsx": "react",
		"isolatedModules": true,
		"lib": ["ES2023"],
		"noUnusedLocals": false
	},
	"include": ["src"],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true,
		"experimentalSpecifierResolution": "node",
		"noPropertyAccessFromIndexSignature": false,
		"noImplicitAny": false,
		"noUnusedLocals": false
	}
}
